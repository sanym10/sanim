import os 
import time
password=int(input("input a password which i won't see :"))
print("ok your password  is saved ^_^")
time.sleep(2)
os.system("clear")
print("now, i will search the pass , dude;")
time.sleep(2)
number = int(input("just tell me the buggest number can exist "))
print("analysing data...")
time.sleep(1)
print("preparing script...")
time.sleep(2)
for search in range(number+1):
    print(search)
    search+=1
    if search==password:
        break
print("compairing results...")
time.sleep(1)
print("final result...")
time.sleep(2)
print(f"the password is {search} !")
